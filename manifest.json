{
  "manifest_version": 3,
  "name": "YouTube Transcript Summarizer",
  "version": "1.2",
  "description": "Extracts and summarizes YouTube video transcripts using Venice AI",
  "permissions": ["storage"],
  "host_permissions": [
    "https://api.venice.ai/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "YouTube Transcript Summarizer"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 